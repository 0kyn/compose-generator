{
    "label": "Common website with PHP support",
    "dir": "5_website_php",
    "files": [
        {
            "path": "docker-compose.yml",
            "type": "compose"
        },
        {
            "path": "README.md",
            "type": "docs"
        },
        {
            "path": "Dockerfile",
            "type": "docker"
        }
    ],
    "questions": [
        {
            "text": "PHP version (e.g. 8 or 7.2):",
            "type": 2,
            "defaultValue": "8",
            "validator": "numeric",
            "envVar": "PHP_VERSION"
        },
        {
            "text": "TLS Certificate Host (e.g. test.example.com):",
            "type": 2,
            "validator": "hostname",
            "envVar": "DOMAIN_URL"
        },
        {
            "text": "TLS Certificate E-Mail Adress (e.g. admin@example.com):",
            "type": 2,
            "validator": "email",
            "envVar": "DOMAIN_EMAIL"
        }
    ],
    "volumes": [
        {
            "text": "Custom path for source directory?",
            "defaultValue": "./src",
            "envVar": "SOURCE_DIRECTORY",
            "withDockerfile": true
        },
        {
            "text": "Custom path for proxy config volume?",
            "defaultValue": "./volumes/proxy-config",
            "envVar": "VOLUME_PROXY_CONFIG",
            "advanced": true
        },
        {
            "text": "Custom path for proxy certificates volume?",
            "defaultValue": "./volumes/proxy-certs",
            "envVar": "VOLUME_PROXY_CERTS",
            "advanced": true
        },
        {
            "text": "Custom path for proxy virtual hosts volume?",
            "defaultValue": "./volumes/proxy-vhosts",
            "envVar": "VOLUME_PROXY_VHOSTS",
            "advanced": true
        },
        {
            "text": "Custom path for Proxy html volume?",
            "defaultValue": "./volumes/proxy-html",
            "envVar": "VOLUME_PROXY_HTML",
            "advanced": true
        }
    ]
}