{
    "label": "React / Spring / MySQL",
    "dir": "7_react_spring_mysql",
    "files": [
        {
            "path": "docker-compose.yml",
            "type": "compose"
        },
        {
            "path": "environment.env",
            "type": "env"
        },
        {
            "path": "README.md",
            "type": "docs"
        },
        {
            "path": "backend/Dockerfile",
            "type": "docker"
        },
        {
            "path": "frontend/Dockerfile",
            "type": "docker"
        }
    ],
    "questions": [
        {
            "text": "On which port you want to expose your app?",
            "type": 2,
            "defaultValue": "80",
            "validator": "port",
            "envVar": "HOST_FRONTEND_PORT"
        },
        {
            "text": "On which port you want to expose your Spring API?",
            "type": 2,
            "defaultValue": "8080",
            "validator": "port",
            "envVar": "HOST_BACKEND_PORT"
        },
        {
            "text": "On which port you want to expose MySQL?",
            "type": 2,
            "defaultValue": "3306",
            "validator": "port",
            "envVar": "HOST_MYSQL_PORT"
        },
        {
            "text": "On which port you want to expose PHPMyAdmin?",
            "type": 2,
            "defaultValue": "81",
            "validator": "port",
            "envVar": "HOST_PMA_PORT"
        },
        {
            "text": "How do you want to call the MySQL user for your application?",
            "type": 2,
            "defaultValue": "application",
            "validator": "alphanum",
            "envVar": "MYSQL_USER"
        },
        {
            "text": "How do you want to call the database for your application?",
            "type": 2,
            "defaultValue": "main",
            "validator": "alphanum",
            "envVar": "MYSQL_DATABASE"
        },
        {
            "text": "Which NodeJS version do you want to use?",
            "type": 2,
            "defaultValue": "lts",
            "validator": "alphanum",
            "envVar": "NODE_VERSION",
            "advanced": true
        },
        {
            "text": "Which MySQL version do you want to use?",
            "type": 2,
            "defaultValue": "latest",
            "validator": "alphanum",
            "envVar": "MYSQL_VERSION",
            "advanced": true
        },
        {
            "text": "Which version of PHPMyAdmin do you want to use?",
            "type": 2,
            "defaultValue": "latest",
            "validator": "alphanum",
            "envVar": "PMA_VERSION",
            "advanced": true
        }
    ],
    "volumes": [
        {
            "text": "Custom path for frontend source directory?",
            "defaultValue": "./frontend/src",
            "envVar": "SOURCE_DIRECTORY_FRONTEND",
            "withDockerfile": true
        },
        {
            "text": "Custom path for backend source directory?",
            "defaultValue": "./backend/src",
            "envVar": "SOURCE_DIRECTORY_BACKEND",
            "withDockerfile": true
        },
        {
            "text": "Custom path for MySQL data volume?",
            "defaultValue": "./volumes/mysql-data",
            "envVar": "VOLUME_MYSQL_DATA",
            "advanced": true
        },
        {
            "text": "Custom path for MySQL logs volume?",
            "defaultValue": "./volumes/mysql-logs",
            "envVar": "VOLUME_MYSQL_LOGS",
            "advanced": true
        }
    ],
    "secrets": [
        {
            "name": "MySQL password for user 'root'",
            "var": "_PW_MYSQL_ROOT",
            "length": 50
        },
        {
            "name": "MySQL password for the application user",
            "var": "_PW_MYSQL_USER",
            "length": 30
        }
    ]
}